<Window x:Class="Hanman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hanman"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>


        <!--Style-->
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="2"></Setter>
                <Setter Property="Background" Value="#FFC168"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="Pause" TargetType="{x:Type Control}">
                <Setter Property="Margin" Value="0,20,20,30"></Setter>
                <Setter Property="Background" Value="#FFC168"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"></Setter>
                    </Style>
                </Style.Resources>
            </Style>
            <Style x:Key="TextBox" TargetType="{x:Type TextBox}">
                
            </Style>
        </Grid.Resources>

        <!-- Zone Title-->
        <Grid Grid.Row="0">
            <TextBlock FontFamily="Playbill" Text="HUNGMAN" FontSize="80" Margin="30, 0, 0, 0"></TextBlock>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="1" Name="BTN_HINT" Style="{StaticResource Pause}" Content="?" Click="BTN_HINT"></Button>
            <Button Grid.Row="0" Grid.Column="2" Name="BTN_PAUSE" Style="{StaticResource Pause}" Content="⏸" Click="BTN_PAUSE"></Button>
        </Grid>
        <!-- Zone game-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Zone Keypad-->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Grid.Column="1" Name="BTN_A" Content="A" Click="BTN_A_Click"></Button>
                <Button Grid.Row="0" Grid.Column="2" Name="BTN_B" Content="B" Click="BTN_B_Click"></Button>
                <Button Grid.Row="0" Grid.Column="3" Name="BTN_C" Content="C" Click="BTN_C_Click"></Button>
                <Button Grid.Row="0" Grid.Column="4" Name="BTN_D" Content="D" Click="BTN_D_Click"></Button>
                <Button Grid.Row="1" Grid.Column="1" Name="BTN_E" Content="E" Click="BTN_E_Click"></Button>
                <Button Grid.Row="1" Grid.Column="2" Name="BTN_F" Content="F" Click="BTN_F_Click"></Button>
                <Button Grid.Row="1" Grid.Column="3" Name="BTN_G" Content="G" Click="BTN_G_Click"></Button>
                <Button Grid.Row="1" Grid.Column="4" Name="BTN_H" Content="H" Click="BTN_H_Click"></Button>
                <Button Grid.Row="2" Grid.Column="1" Name="BTN_I" Content="I" Click="BTN_I_Click"></Button>
                <Button Grid.Row="2" Grid.Column="2" Name="BTN_J" Content="J" Click="BTN_J_Click"></Button>
                <Button Grid.Row="2" Grid.Column="3" Name="BTN_K" Content="K" Click="BTN_K_Click"></Button>
                <Button Grid.Row="2" Grid.Column="4" Name="BTN_L" Content="L" Click="BTN_L_Click"></Button>
                <Button Grid.Row="3" Grid.Column="1" Name="BTN_M" Content="M" Click="BTN_M_Click"></Button>
                <Button Grid.Row="3" Grid.Column="2" Name="BTN_N" Content="N" Click="BTN_N_Click"></Button>
                <Button Grid.Row="3" Grid.Column="3" Name="BTN_O" Content="O" Click="BTN_O_Click"></Button>
                <Button Grid.Row="3" Grid.Column="4" Name="BTN_P" Content="P" Click="BTN_P_Click"></Button>
                <Button Grid.Row="4" Grid.Column="1" Name="BTN_Q" Content="Q" Click="BTN_Q_Click"></Button>
                <Button Grid.Row="4" Grid.Column="2" Name="BTN_R" Content="R" Click="BTN_R_Click"></Button>
                <Button Grid.Row="4" Grid.Column="3" Name="BTN_S" Content="S" Click="BTN_S_Click"></Button>
                <Button Grid.Row="4" Grid.Column="4" Name="BTN_T" Content="T" Click="BTN_T_Click"></Button>
                <Button Grid.Row="5" Grid.Column="1" Name="BTN_U" Content="U" Click="BTN_U_Click"></Button>
                <Button Grid.Row="5" Grid.Column="2" Name="BTN_V" Content="V" Click="BTN_V_Click"></Button>
                <Button Grid.Row="5" Grid.Column="3" Name="BTN_W" Content="W" Click="BTN_W_Click"></Button>
                <Button Grid.Row="5" Grid.Column="4" Name="BTN_X" Content="X" Click="BTN_X_Click"></Button>
                <Button Grid.Row="6" Grid.Column="2" Name="BTN_Y" Content="Y" Click="BTN_Y_Click"></Button>
                <Button Grid.Row="6" Grid.Column="3" Name="BTN_Z" Content="Z" Click="BTN_Z_Click"></Button>
            </Grid>
        </Grid>

        <!-- Zone Display-->
        <TextBlock Grid.Row="2"  Name="TB_Display"></TextBlock>

        <!-- Zone Footer-->
        
    </Grid>
</Window>
